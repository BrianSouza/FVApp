<?xml version="1.0" encoding="utf-8" ?>
<resources>
  <style name="fvappStyle" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="android:colorPrimary">@color/verdePadraoApp</item>
    <item name="android:windowBackground">@color/cinzaFundo</item>
    <item name="android:textColorPrimary">@color/brancoTexto</item>
    <item name="android:colorAccent">@color/verdeControles</item>
    <item name="android:statusBarColor">@color/verdePadraoApp</item>
    <item name="android:colorPrimaryDark">@color/verdePadraoApp</item>
    <item name="android:navigationBarColor">@color/cinzaFundo</item>
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
  </style>

  <style name="linearStyle">
    <item name="android:layout_margin">3dp</item>
    <item name="android:background">@color/cinzaFundo</item>
  </style>

  <style name="editTextStyleLogin" >
    <item name="android:background">@color/brancoTexto</item>
    <item name="android:textStyle">bold</item>
    <item name="android:padding">10dip</item>
    <item name="android:textColorHint">@color/cinzaTexto</item>
    <item name="android:textColor">@color/verdePadraoApp</item>
    <item name="android:layout_marginLeft">5dp</item>
    <item name="android:layout_marginRight">5dp</item>
    <item name="android:layout_marginTop">20dp</item>
    <item name="android:layout_marginBottom">5dp</item>
  </style>

  <style name="editTextStyleSenha" >
    <item name="android:background">@color/brancoTexto</item>
    <item name="android:textStyle">bold</item>
    <item name="android:padding">10dip</item>
    <item name="android:textColorHint">@color/cinzaTexto</item>
    <item name="android:textColor">@color/verdePadraoApp</item>
    <item name="android:layout_marginLeft">5dp</item>
    <item name="android:layout_marginRight">5dp</item>
    <item name="android:layout_marginTop">5dp</item>
    <item name="android:layout_marginBottom">20dp</item>
  </style>

  <style name="btnLogin" >
    <item name="android:layout_marginLeft">5dp</item>
    <item name="android:layout_marginRight">5dp</item>
    <item name="android:layout_marginTop">5dp</item>
    <item name="android:layout_marginBottom">20dp</item>
    <item name="android:background">@color/verdePadraoApp</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textColor">@color/brancoTexto</item>
  </style>
    
  <style name="btnConfig" >
    <item name="android:textStyle">bold</item>
    <item name="android:textColor">@color/brancoTexto</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_alignParentRight">true</item>
    <item name="android:layout_alignParentBottom">true</item>
    <item name="android:layout_marginRight">20dp</item>
    <item name="android:layout_marginBottom">5dp</item>
    <item name="android:background">@color/cinzaFundo</item>

  </style>

  <style name="TextView" >
    <item name="android:textStyle">bold</item>
    <item name="android:padding">10dip</item>
    <item name="android:textColor">@color/verdePadraoApp</item>
    <item name="android:layout_marginLeft">5dp</item>
    <item name="android:layout_marginRight">5dp</item>
    <item name="android:layout_marginTop">5dp</item>
    <item name="android:layout_marginBottom">20dp</item>
  </style>
</resources>
